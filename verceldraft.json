{ 
    "version": 2, 
    "routes":[
        {
            "src": "/(.*)",
            "dest": "/api",
            "method": ["GET", "POST", "PUT", "DELETE", "PATCH", "OPTIONS"],
            "headers": {
                "Access-Control-Allow-Origin": "*"
            }
        }
    ]
}

{
    "routes": [
      {
        "src": "/api/(.*)",
        "methods": ["GET", "POST", "PUT", "DELETE"],
        "headers": {
          "Access-Control-Allow-Origin": "*",
          "Access-Control-Allow-Methods": "GET,POST,PUT,DELETE",
          "Access-Control-Allow-Headers": "Content-Type"
        }
      }
    ]
  }